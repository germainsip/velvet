<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane stylesheets="@style/main_style.css" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.germain.gui.CatalogueController">
   <children>
      <VBox spacing="10.0" styleClass="combo-box" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
         <children>
            <Label styleClass="maint-title" text="Velvet Records" />
            <ComboBox promptText="Choisissez  votre album..." />
            <HBox spacing="30.0">
               <children>
                  <VBox spacing="10.0">
                     <children>
                        <Label styleClass="content-text" text="Titre du disque" />
                        <Label styleClass="content-text" text="Artiste" />
                     </children>
                  </VBox>
                  <ImageView fx:id="displayAlb" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@pictures/Dirt.jpeg" />
                     </image>
                     <effect>
                        <InnerShadow />
                     </effect>
                  </ImageView>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
